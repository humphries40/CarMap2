<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="10dp"
    >

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="42 West Oakland Ave"
    android:textAppearance="?android:attr/textAppearanceListItem"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:gravity="left|center"
    android:id="@+id/list_address"
    android:textSize="22dp"
    android:theme="@style/Theme.Base.Light" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/street_sweeping"
    android:textAppearance="?android:attr/textAppearanceListItemSmall"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:id="@+id/list_street_sweeping"
    android:gravity="left"
    android:layout_below="@+id/list_address"
    android:maxLines="4"
    android:textIsSelectable="true"
    android:textSize="16dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Delete"
    android:id="@+id/list_button_delete"
    android:clickable="true"
    android:layout_gravity="right"
    android:layout_alignEnd="@id/list_address" />

</RelativeLayout>